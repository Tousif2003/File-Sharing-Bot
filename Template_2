<style>
/* Remove blue highlight on tap/click */
.plyr__control:focus {
    outline: none;
    -webkit-tap-highlight-color: transparent;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const videoEl = document.querySelector('#player');
    videoEl.setAttribute('preload', 'auto');
    videoEl.setAttribute('playsinline', '');
    videoEl.setAttribute('crossorigin', 'anonymous');

    // 🎥 Initialize Plyr
    const player = new Plyr(videoEl, {
        controls: [
            'play-large',
            'rewind',
            'play',
            'fast-forward',
            'progress',
            'current-time',
            'duration'
        ]
    });

    // 🔊 Audio Booster (safe)
    let audioContext, gainNode;
    function setupAudioBoost() {
        if (!audioContext) {
            audioContext = new (window.AudioContext || window.webkitAudioContext)();
            const source = audioContext.createMediaElementSource(videoEl);
            gainNode = audioContext.createGain();
            gainNode.gain.value = 3.0; // 3x louder
            source.connect(gainNode);
            gainNode.connect(audioContext.destination);
        }
    }

    // ==========================
    // Smooth seek recovery
    // ==========================
    let seekTimeout;
    videoEl.addEventListener('seeking', () => {
        clearTimeout(seekTimeout);
        videoEl.pause();
        seekTimeout = setTimeout(() => {
            if (videoEl.readyState >= 3) {
                videoEl.play().catch(()=>{});
            }
        }, 200);
    });

    // ==========================
    // Landscape / Portrait Toggle
    // ==========================
    const rotateBtn = document.createElement('button');
    rotateBtn.classList.add('plyr__control');
    rotateBtn.setAttribute('type', 'button');
    rotateBtn.setAttribute('aria-label', 'Toggle Landscape');
    Object.assign(rotateBtn.style, {
        display: 'flex',
        flexDirection: 'column',
        alignItems: 'center',
        justifyContent: 'center',
        fontSize: '12px',
        color: '#fff',
        cursor: 'pointer',
        padding: '5px 8px',
        marginLeft: '5px',
        outline: 'none',
        WebkitTapHighlightColor: 'transparent'
    });
    rotateBtn.innerHTML = `
        <i class="fas fa-expand" style="font-size:18px; color:#fff;"></i>
        <span style="font-size:10px; color:#00ffcc; font-weight:bold;">Landscape</span>
    `;
    player.elements.controls.appendChild(rotateBtn);

    let isLandscape = false;
    rotateBtn.addEventListener('click', async () => {
        const text = rotateBtn.querySelector('span');
        try {
            if (!isLandscape) {
                await player.fullscreen.enter();
                if (screen.orientation?.lock) await screen.orientation.lock('landscape');
                text.innerText = 'Portrait';
                text.style.color = '#ff9933';
                isLandscape = true;
            } else {
                if (document.fullscreenElement) await player.fullscreen.exit();
                if (screen.orientation?.unlock) screen.orientation.unlock();
                text.innerText = 'Landscape';
                text.style.color = '#00ffcc';
                isLandscape = false;
            }
        } catch(e){console.log(e);}
    });

    // ==========================
    // Audio Unmute Button
    // ==========================
    const unmuteBtn = document.createElement('button');
    unmuteBtn.classList.add('plyr__control');
    unmuteBtn.setAttribute('type', 'button');
    unmuteBtn.setAttribute('aria-label', 'Audio Unmute');
    Object.assign(unmuteBtn.style, {
        display: 'flex',
        flexDirection: 'column',
        alignItems: 'center',
        justifyContent: 'center',
        fontSize: '12px',
        color: '#fff',
        cursor: 'pointer',
        padding: '5px 8px',
        marginLeft: '5px',
        outline: 'none',
        WebkitTapHighlightColor: 'transparent'
    });
    unmuteBtn.innerHTML = `
        <i class="fas fa-volume-up" style="font-size:18px; color:#fff;"></i>
        <span style="font-size:10px; color:#ff66cc; font-weight:bold;">Audio Unmute</span>
    `;
    player.elements.controls.appendChild(unmuteBtn);

    unmuteBtn.addEventListener('click', async () => {
        setupAudioBoost();
        await audioContext.resume();
        player.muted = false;
        if (player.paused) player.play();
        unmuteBtn.style.opacity='0'; setTimeout(()=>unmuteBtn.remove(),250);
    });

    // ==========================
    // Autoplay fix for modern browsers
    // ==========================
    videoEl.addEventListener('click', async () => {
        try { await videoEl.play(); } catch(e){ console.log(e); }
    });
});
</script>
